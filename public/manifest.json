{
    "manifest_version": 3,
    "name": "AI Chatbot for Selected Text",
    "version": "1.0",
    "description": "Provides more information about selected text using AI.",
    "permissions": [
        "storage",
        "contextMenus",
        "system.display"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "all_frames": true
        }
    ]
}